doctype html
html(lang='es')
        include ./head.pug
        body
          div#backdrop
          div#red_social
          include ./headernav.pug
          main
            form.formulariocontacto(name='datos' method='GET' action='mailto:cotainavicent@gmaill.com' autocomplete='on' data-aos="zoom-in")
                fieldset.boxshadow
                    legend 
                      h1 CONTACTA
                    span#inputnombre
                        label(for='nombre') Nom *
                        br
                        input#nombre(type='text' name='nombre' maxlength='40' required='' autofocus='' placeholder='e.g. Vicent' pattern='^[A-Za-z]{0,40}$')
                    span#inputapellidos
                        label(for='apellidos') Cognoms *
                        br
                        input#apellidos(type='text' name='apellidos' maxlength='60' required='' placeholder='e.g. Cotaina Bertó' pattern='^[A-Za-z\\]{0,60}$')
                    span#inputtelefono
                        label(for="tel") Número de telèfon *
                        br 
                        input#tel(type="tel" name='tel' required='' placeholder='e.g. 601-11-88-59' pattern='^[0-9]{3}-[0-9]{2}-[0-9]{2}-[0-9]{2}$')
                    span#inputcorreo 
                        label(for='email') Correu electrònic *
                        br 
                        input#email(type='email' name='email' required='' placeholder='e.g. cotainavicent@gmail.com' pattern='^([0-9a-zA-Z]([-.\w]*[0-9a-zA-Z])*@([0-9a-zA-Z][-\w]*[0-9a-zA-Z]\.)+[a-zA-Z]{2,9})$') 
                    span#textareamensaje 
                        label(for="mensaje") Missatge *
                        br
                        textarea#men(name="mensaje", cols="30", rows="10" required='')
                    span#buttons
                        button.button(type='submit') Enviar
                        button.button(type='reset') Borrar
                    br
          include ./footer.pug